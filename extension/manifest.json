{
    "manifest_version": 3,
    "name": "SentinelTK - Anti-Scam Protection",
    "version": "1.0.0",
    "description": "Real-time anti-scam protection with privacy-first analysis.",
    "permissions": [
        "activeTab",
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}